<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        tools:text="Select date:"
        android:text="@string/dialog_select_date"/>
    <EditText
        android:id="@+id/dialog_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:inputType="text"
        android:hint="@string/dialog_date_hint"
        tools:hint="Enter a date"
        android:importantForAutofill="no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        tools:text="Payment:"
        android:text="@string/dialog_payment" />
    <EditText
        android:id="@+id/dialog_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:inputType="numberDecimal"
        android:hint="@string/dialog_payment_hint"
        tools:hint="145.08"
        android:importantForAutofill="no"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        tools:text="Balance:"
        android:text="@string/dialog_balance" />
    <EditText
        android:id="@+id/dialog_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:inputType="numberDecimal"
        android:hint="@string/dialog_balance_hint"
        tools:hint="2577.08"
        android:importantForAutofill="no"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        tools:text="Location:"
        android:text="@string/dialog_location" />
    <EditText
        android:id="@+id/dialog_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:inputType="text"
        android:hint="@string/dialog_location_hint"
        tools:hint="TC KORONA / MINSK"
        android:importantForAutofill="no"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        tools:text="Category:"
        android:text="@string/dialog_category" />
    <Spinner
        android:id="@+id/dialog_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:entries="@array/transaction_category" />

</GridLayout>